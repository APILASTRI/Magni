# Makefile for Sphinx documentation for the Magni Python package
#

# You can set these variables from the command line.
SPHINXOPTS    =
SPHINXBUILD   = sphinx-build
PAPER         =
BUILDDIR      = build
DOCSOURCEDIR  = source
PACKAGENAME	  = magni
PYTHONINT	  = python
WKHTMLTOPDF   = wkhtmltopdf
WKHTMLTOPDFOPTS = --javascript-delay 15000 --header-right "[title]" --header-left "[subsection]" --footer-left "[date]" --footer-right "Page [page] of [toPage]" --footer-spacing 3 --header-spacing 3 --margin-bottom 12mm --margin-top 10mm --margin-left 15mm --margin-right 15mm --header-font-size 10 --footer-font-size 10 cover $(DOCSOURCEDIR)/cover.html

# Internal variables.
PAPEROPT_a4     = -D latex_paper_size=a4
PAPEROPT_letter = -D latex_paper_size=letter
ALLSPHINXOPTS   = -d $(BUILDDIR)/doctrees $(PAPEROPT_$(PAPER)) $(SPHINXOPTS) source
# the i18n builder cannot share the environment and doctrees with the others
I18NSPHINXOPTS  = $(PAPEROPT_$(PAPER)) $(SPHINXOPTS) source

.PHONY: help clean sourceclean html singlehtml pdf linkcheck docapi

help:
	@echo "Please use \`make <target>' where <target> is one of"
	@echo "  html         to make standalone HTML files"
	@echo "  singlehtml   to make a single large HTML file"
	@echo "  pdf          to make a pdf from a single large HTML file (requires wkhtmltopdf to be installed)"
	@echo "  linkcheck    to check all external links for integrity"
	@echo "  docapi       to automagically genereate rst files for API documentation"
	@echo "  clean        to remove all builds"
	@echo "  sourceclean  to remove files generated by running docapi"

sourceclean:
	-rm -rf $(DOCSOURCEDIR)/$(PACKAGENAME).*
	-rm -rf $(DOCSOURCEDIR)/cover.html

clean:
	-rm -rf $(BUILDDIR)/*

html:
	$(SPHINXBUILD) -b html $(ALLSPHINXOPTS) $(BUILDDIR)/html
	@echo
	@echo "Build finished. The HTML pages are in $(BUILDDIR)/html."

singlehtml:
	$(SPHINXBUILD) -b singlehtml -D html_theme_options.nosidebar=1 -t no_viewcode_ext $(ALLSPHINXOPTS) $(BUILDDIR)/singlehtml
	@echo
	@echo "Build finished. The HTML page is in $(BUILDDIR)/singlehtml."

pdf: | singlehtml
	$(PYTHONINT) $(DOCSOURCEDIR)/create_pdf_cover.py
	mkdir -p $(BUILDDIR)/pdf
	$(WKHTMLTOPDF) $(WKHTMLTOPDFOPTS) $(BUILDDIR)/singlehtml/index.html $(BUILDDIR)/pdf/index.pdf
	@echo 
	@echo "Build finished. The PDF is in $(BUILDDIR)/pdf."

linkcheck:
	$(SPHINXBUILD) -b linkcheck $(ALLSPHINXOPTS) $(BUILDDIR)/linkcheck
	@echo
	@echo "Link check complete; look for any errors in the above output " \
	      "or in $(BUILDDIR)/linkcheck/output.txt."

docapi:
	$(PYTHONINT) docapi.py -T -P -e -f -o $(DOCSOURCEDIR) ../$(PACKAGENAME)
	@echo "Generated rst files for the api."
